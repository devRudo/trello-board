<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') -%>
</head>
<body>
    <header>
        <%- include('./partials/header') -%>
    </header>
    <main>
        <div class="container-fluid">
            <div class="row p-4">
                <h3 class="col-md-12 page-title">Personal Boards</h3>
            </div>
            <div class="row p-4">
                <% boards.forEach((board)=> { %>
                    <a href="/board/<%= board.id %>" class="col-md-2">
                        <div class="card shadow text-dark mb-3 board">
                            <div class="card-body d-flex justify-content-center align-items-center">
                                <h6><%= board.name %></h6>
                            </div>
                        </div>
                    </a>
                <% }); %>
            </div>
        </div>
    </main>
    <%- include('./partials/footer') -%>
</body>
</html>